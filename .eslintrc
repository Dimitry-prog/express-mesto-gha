{
  "env": {
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    //Привет, т.к. использую import/export как в браузере node поддерживает такой способ
    //но линтер нет, поэтому добавил это исключение, чтобы работала как в браузере
    //без исключения надо все переписывать на дефолтный required и module.export
    //это единтсвенное решение, которое нашел, чтобы подружить eslint и es6 в node
    //можно его оставить?)
    "import/extensions": [
      0,
      {
        "js": "always"
      }
    ]
  }
}
